
<h1>Tweet User Page</h1>

<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
    Following <%= link_to("Unfollow", "#") %>
  <% else %>
    <%= link_to("Follow", "#") %>
  <% end %>
<% end %>

</br>
</br>
</br>

Full Name: <%= @user.full_name %> </br>
Username: <%= @user.username %> </br>
Email: <%= @user.email %>
</br>
</br>
</br>

<%= link_to("Following(#{@user.follow_count})", "#") %></br>
<%= link_to("Followers(#{@user.followers_count})", "#") %>


<h3>Tweets</h3>
<% if @tweets.empty? %>
  <h4>There are no tweets yet</h4>
<% else %>
  <ul>
    <% @tweets.each do |tweet| %>
      <li>
        <p>
          <%= tweet.user.full_name %>, <%= tweet.user.username %> - <%= tweet.body %>
        </p>
      </li>
    <% end %>
  </ul>
<% end %>

