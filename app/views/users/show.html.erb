
<h1><%= @user.full_name %></h1>

<% unless current_user == @user %>
  <% if current_user.following?(@user) %>
    Following <%= link_to("Unfollow", unfollow_user_path(@user.username), method: :post) %>
  <% else %>
    <%= link_to("Follow", follow_user_path(@user.username), method: :post) %>
  <% end %>
<% end %>

</br>
</br>
</br>

Username: <%= @user.username %> </br>
Email: <%= @user.email %>
</br>
</br>
</br>

<%= link_to("Following(#{@user.follow_count})", following_user_path(@user.username)) %></br>
<%= link_to("Followers(#{@user.followers_count})", followers_user_path(@user.username)) %>


<h3>Tweets</h3>
<% if @tweets.empty? %>
  <h4>There are no tweets yet</h4>
<% else %>
  <ul>
    <% @tweets.each do |tweet| %>
      <li>
        <p>
          <%= tweet.user.full_name %>, <%= tweet.user.username %> - <%= tweet.body %>
        </p>
      </li>
    <% end %>
  </ul>
<% end %>

