<h1>Feed page</h1>

<% if current_user %>
  <%= link_to("Tweet", new_user_tweet_path(user_username: current_user.username)) %>

  <h3>Tweets</h3>

  <% if @tweets.empty? %>
    <h4>There are no tweets yet</h4>
  <% else %>
    <ul>
      <% @tweets.each do |tweet| %>
        <li>
          <p>
            <b><%= tweet.user.full_name %></b>, @<%= tweet.user.username %> - <%= tweet.body %>
          </p>
        </li>
      <% end %>
    </ul>
  <% end %>
<% else %>
  <h1>Inicia sesion</h1>
<% end %>
